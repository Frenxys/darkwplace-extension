{
  "manifest_version": 3,
  "name": "Auto Dark Theme for WPlace",
  "version": "1.0",
  "description": "Forces dark theme on wplace.live and syncs it with the browser theme.",
  "content_scripts": [
    {
      "matches": ["https://wplace.live/*"],
      "js": ["auto-dark.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "author": "Enea",
  "homepage_url": "https://github.com/Frenxys"
}
